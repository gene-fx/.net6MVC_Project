@model BulkyBook.Models.ViewModels.ProductVm
@{
	ViewData["Title"] = "ProductView";
}
<style>
	.img-view{
		height:300px; 
		object-fit:scale-down;
	}
</style>

<form method="post" asp-action="ProductView" enctype="multipart/form-data">
	<div class="border-bottom p-3 mt-4 mb-4 row">
		<div class="row pb-2">
			<h2 class="text-success">Product View</h2>
			<input asp-for="Product.Id" hidden/>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Product.Title"></label>
			<input asp-for="Product.Title" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="Product.Description"></label>
			<textarea asp-for="Product.Description" rows="3" class="form-control" disabled></textarea>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Product.ISBN"></label>
			<input asp-for="Product.ISBN" class="form-control" disabled/>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Product.Author"></label>
			<input asp-for="Product.Author" class="form-control" disabled/>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Product.ListPrice"></label>
			<input asp-for="Product.ListPrice" class="form-control" disabled/>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Product.Price"></label>
			<input asp-for="Product.Price" class="form-control" disabled/>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Product.Price50"></label>
			<input asp-for="Product.Price50" class="form-control" disabled/>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Product.Price100"></label>
			<input asp-for="Product.Price100" class="form-control" disabled/>
		</div>
		<label>Image Preview</label>
		<div class="mb-3 col-12 text-center">
			<div>		
				<img src=@Model.Product.ImageUrl class="form-control img-view">		
				<input asp-for="Product.ImageUrl" type="text" name="oldFile" id="oldFileHidden" hidden/>		
			</div>		
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Product.CategoryId"></label>
			<select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control" disabled>
				<option disabled selected>--Select Category--</option>
			</select>
		</div>
		<div class="mb-3 col-6">
			<label asp-for="Product.CoverTypeId"></label>
			<select asp-for="Product.CoverTypeId" asp-items="@Model.CoverTypeList" class="form-control" disabled>
				<option deseabled selected>--Select Coter Type--</option>
			</select>
		</div>

		<div class="col-12">
			<a asp-controller="Product" asp-action="Upsert" asp-route-id="@Model.Product.Id" class="btn btn-outline-primary btn-lg col-6" style="width:150px; line-height: 0.8;">Update this product</a>
			<a asp-controller="Product" asp-action="index" class="btn btn-outline-light btn-lg col-6" style="width:150px">Back to list</a>
		</div>

	</div>
</form>

