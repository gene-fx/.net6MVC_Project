@model BulkyBook.Models.CoverType

<form method="post">
	<div class="border-bottom p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Cover Type</h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="Name" ></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CreateDateTime" ></label>
			<input asp-for="CreateDateTime" class="form-control" disabled/>
			<span asp-validation-for="CreateDateTime" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary btn-lg">Update</button>
		<a asp-controller="CoverType" asp-action="index" class="btn btn-outline-light btn-lg">Back to list</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

