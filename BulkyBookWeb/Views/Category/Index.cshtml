@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Edit List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" type="button" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-square"></i> &nbsp; New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-secondary" style="width:100%">
    <thead>
        <tr>
            <th>
                <label class="text text-success">Category Name</label>
            </th>
            <th>
                <label class="text text-success">Display Order</label>
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>    
                <td width="60%">
                    <label class="text text-success">@obj.Name</label>
                </td>
                <td width="20%">
                    <label class="text text-success">@obj.DisplayOrder</label>
                </td>
                <td width="10%" style="vertical-align:middle; text-align:center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
                <td width="10%" style="vertical-align:middle; text-align:center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                    </div>
               </td> 
            </tr>
        }
    </tbody>
</table>